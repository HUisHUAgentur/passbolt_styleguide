{
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/jest",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config",
                ".jest.config.json",
                "--no-cache",
                "./src",
                "--runInBand",
                "--watchAll=false"
            ]
        }
    ]
}